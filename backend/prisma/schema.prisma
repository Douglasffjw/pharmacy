generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Usuario {
  id            String      @id @default(uuid())
  email         String      @unique
  nome          String
  senha         String
  telefone      String?     // Telefone do usuário
  dataNascimento DateTime?  // Data de nascimento
  papel         Papel       @default(CLIENTE)
  criadoPor     String?     // ID do vendedor que criou (apenas para vendedores)
  criadoEm      DateTime    @default(now())
  atualizadoEm  DateTime    @updatedAt

  // Auto-relacionamento para rastrear quem criou o usuário (apenas para vendedores)
  criador       Usuario?    @relation("UsuariosCriados", fields: [criadoPor], references: [id])
  criados       Usuario[]   @relation("UsuariosCriados")

  // Relacionamentos com produtos e pedidos
  produtosCriados Produto[]  @relation("ProdutosCriados")
  pedidosCliente  Pedido[]   @relation("PedidosCliente")
  pedidosVendedor Pedido[]   @relation("PedidosVendedor")

  @@map("usuarios")
}

enum Papel {
  CLIENTE
  VENDEDOR
  ADMIN
}

model Produto {
  id           String     @id @default(uuid())
  nome         String
  descricao    String
  preco        Float
  imagens      String[]   // Array de URLs das imagens
  categoria    String
  marca        String
  emEstoque     Boolean   @default(true)
  quantidade   Int        @default(0) // Quantidade em estoque
  receita      Boolean    @default(false)
  criadoPor    String     // ID do vendedor que criou
  criadoEm     DateTime   @default(now())
  atualizadoEm DateTime   @updatedAt

  // Relacionamentos
  criador      Usuario    @relation("ProdutosCriados", fields: [criadoPor], references: [id])
  itensPedido  ItemPedido[]

  @@map("produtos")
}

model Pedido {
  id          String         @id @default(uuid())
  clienteId   String
  vendedorId  String?        // Vendedor que processou o pedido
  total       Float
  statusPedido StatusPedido  @default(PENDENTE)
  criadoEm    DateTime       @default(now())
  atualizadoEm DateTime      @updatedAt

  // Relacionamentos
  cliente     Usuario        @relation("PedidosCliente", fields: [clienteId], references: [id])
  vendedor    Usuario?       @relation("PedidosVendedor", fields: [vendedorId], references: [id])
  itens       ItemPedido[]

  @@map("pedidos")
}

model ItemPedido {
  id         String   @id @default(uuid())
  pedidoId   String
  produtoId  String
  quantidade Int
  preco      Float    // Preço no momento da compra

  // Relacionamentos
  pedido     Pedido   @relation(fields: [pedidoId], references: [id], onDelete: Cascade)
  produto    Produto  @relation(fields: [produtoId], references: [id])

  @@map("itens_pedido")
}

enum StatusPedido {
  PENDENTE
  CONFIRMADO
  CANCELADO
  CONCLUIDO
}
